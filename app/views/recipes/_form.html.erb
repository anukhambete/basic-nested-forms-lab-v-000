<%= form_for @recipe do |f| %>
  Title: <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |ingr| %>
    <%= ingr.label :name %>
    <%= ingr.text_field :street_address_1 %><br>

    <%= ingr.label :street_address_2 %>
    <%= ingr.text_field :street_address_2 %><br>

  <% end %>

  <%= f.submit %>
<% end %>
